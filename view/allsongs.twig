{% extends 'template.twig' %}
{% block title %}Interface de partie{% endblock %}
{% block script %}<script src="public/js/Songs.js"></script>{% endblock %}
{% block header %}{% endblock %}
{% block content %}

<div id='songSearchForm'>
		<label for="search">Rechercher un son</label>
		<input type="text" id="songSearch">
		<input type="button" id="searchASong" value="Rechercher">
		<div id="result"></div>
</div>



<div id="allSongs">


{% for allSongs in allSongs %}
		<div class="songs">{{ allSongs['name'] }}

{% if allSongs['id'] in favSongs %}
	<audio src="public/songs/{{ allSongs['access'] }}" controls></audio>{% if id is not null %}<button class="removeSong" id="{{ allSongs['id'] }}"></button>{% endif %}</div>
{% else %}
		<audio src="public/songs/{{ allSongs['access'] }}" controls></audio>{% if id is not null %}<button class="addSong" id="{{ allSongs['id'] }}"></button>{% endif %}</div>
{% endif %}

		{% endfor %}


</div>

{% endblock %}




{% block script_bottom %}
<script>var AllSongs = new AllSongs();</script>
{% endblock %}
