{% extends 'template.twig' %}
{% block title %}Interface de partie{% endblock %}
{% block script %}<script src="public/js/Songs.js"></script>{% endblock %}
{% block header %}{% endblock %}
{% block content %}

<div id='songSearchForm' class"ui-widget">
		<label for="search">Rechercher un son</label>
		<input id="songSearch">
		<input type="button" id="searchASong" value="Rechercher">
		<div id="resultSongSearch"></div>
</div>



<div id="allSongs">


{% for allSongs in allSongs %}
		<div class="songs">{{ allSongs['name'] }}

{% if allSongs['id'] in favSongs %}
		<audio src="public/songs/{{ allSongs['access'] }}" controls></audio>{% if id is not null %}<button class="removeSong" id="{{ allSongs['id'] }}"></button>
	</div>
{% endif %}
{% else %}
		<audio src="public/songs/{{ allSongs['access'] }}" controls></audio>{% if id is not null %}<button class="addSong" id="{{ allSongs['id'] }}"></button>
	</div>
{% endif %}
{% endif %}


		{% endfor %}

</div>


{% endblock %}




{% block script_bottom %}
<script>var AllSongs = new AllSongs();</script>
{% endblock %}
